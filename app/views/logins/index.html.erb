<h1>Listado de los Usuarios Logeados </h1>

<table>
  <tr>
    <th>Nombre usuario</th>    
  </tr>

<% for login in @logins %>
  <tr>
    <td><%=h login.nombre_usuario %></td>    
    <td><%= link_to 'Mostrar', login %></td>
    <td><%= link_to 'Editar', edit_login_path(login) %></td>
    <td><%= link_to 'Eliminar(Logout Usuario)', login, :confirm => '¿Está seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Login(Logear Usuario)', new_login_path %> |
<%= link_to 'Atrás', :back %> |
