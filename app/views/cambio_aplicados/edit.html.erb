<h1>Editar Cambio Aplicado</h1>

<% form_for(@cambio_aplicado) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :fecha_aplicado %><br />
    <%= f.date_select :fecha_aplicado, :order => [:day, :month, :year] %>
  </p>
  <p>
    Cambio de Estado: <br />
    <%= link_to(
      'Planificado para: ' +
      @cambio_aplicado.cambio_estado.fecha_cambio.strftime("%d / %m / %Y") + 
      '<br /> para la norma:  ' +
      @cambio_aplicado.cambio_estado.norma.tipo_norma.nombre + ' ' +
      @cambio_aplicado.cambio_estado.norma.numero +
        '<br /><i> (Se abre en una nueva ventana) </i>',
      @cambio_aplicado.cambio_estado,
      :target => 'blank') %>
  </p>
  <p>
    <%= f.label :comentario %><br />
    <%= f.text_area :comentario %>
  </p>
  <p>
    <%= f.submit "Cambiar" %>
  </p>
<% end %>

<div class="comandos">
  <p>
    <%= link_to 'Mostrar', @cambio_aplicado %> |
    <%= link_to 'Atrás', :back %> |
    <%= link_to 'Principal', :controller => 'pagina_principal' %>
  </p>
</div>
