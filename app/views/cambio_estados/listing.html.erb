<h1>Listing cambio_estados</h1>

<table>
  <tr>
    <th>Fecha cambio</th>
    <th>Norma</th>
    <th>Comentario</th>
    <th>Fecha creacion</th>
    <th>Causa cambio estado</th>
    <th>Estado</th>
  </tr>

<% for cambio_estado in @cambio_estados %>
  <tr>
    <td><%=h cambio_estado.fecha_cambio.strftime("%d / %m / %Y") %></td>
    <td><%= link_to(
      cambio_estado.norma.tipo_norma.nombre + ' ' + cambio_estado.norma.numero,
      cambio_estado.norma)%></td>
    <td><%=h cambio_estado.comentario %></td>
    <td><%=h cambio_estado.fecha_creacion.strftime("%d / %m / %Y") %></td>
    <td><%= link_to cambio_estado.causa_cambio_estado.nombre, cambio_estado.causa_cambio_estado %></td>
    <td><%= link_to cambio_estado.estado.nombre, cambio_estado.estado %></td>
    <td><%= link_to 'Mostrar', cambio_estado %></td>
    <td><%= link_to 'Editar', edit_cambio_estado_path(cambio_estado) %></td>
    <td><%= link_to 'Eliminar', cambio_estado, :confirm => '¿Está seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

