<h1>Listar Tipo de Relaciones</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Comentario</th>
  </tr>

<% for tipo_relacion in @tipo_relacions %>
  <tr>
    <td><%=h tipo_relacion.nombre %></td>
    <td><%=h tipo_relacion.comentario %></td>
    <td><%= link_to 'Mostrar', tipo_relacion %></td>
    <td><%= link_to 'Editar', edit_tipo_relacion_path(tipo_relacion) %></td>
    <td><%= link_to 'Eliminar', tipo_relacion, :confirm => '¿Está Seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Tipo de Relación', new_tipo_relacion_path %> |
