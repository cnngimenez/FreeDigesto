<h1> Listado de los Privilegios de los Patrones de Privilegios </h1>

<table>
  <tr>
    <th>Privilegio</th>
    <th>Patron privilegio</th>
  </tr>

<% for agregar_privilegio in @agregar_privilegios %>
  <tr>
    <td><%= link_to(
      agregar_privilegio.privilegio.nombre,
      agregar_privilegio.privilegio,
      :target => 'blank')%></td>
    <td><%= link_to(
      agregar_privilegio.patron_privilegio.nombre,
      agregar_privilegio.patron_privilegio,
      :target => 'blank')%></td>
    <td><%= link_to 'Mostrar', agregar_privilegio %></td>
    <td><%= link_to 'Eliminar', agregar_privilegio, :confirm => '¿Está seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<div class="comandos">
  <p>
    <%= link_to 'Nuevo privilegio para un patron', new_agregar_privilegio_path %> |
    <%= link_to 'Principal', :controller => 'pagina_principal' %>
  </p>
</div>
