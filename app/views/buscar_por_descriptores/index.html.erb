<h1> Buscar por Descriptores </h1>

<p>
  <%  #link_to 'Editar', edit_norma_path(norma) %>
  <%= link_to 'Principal', {:controller => "pagina_principal"}, :target => "main" %>
</p>

<script type="text/javascript">
  function elegir(descriptor,descriptor_id){
    var txt = document.getElementById("descriptor_general")
    var txt_id = document.getElementById("buscar_descriptor_descriptor_general_id")
    txt.value = descriptor
    txt_id.value = descriptor_id
  }

</script>

<p> Ingrese el descriptor general que posee la norma que usted busca </p>

<% @lstDescriptores.each do |desc| %>
  <p>
    <%= link_to desc.nombre, "javascript: elegir('#{desc.nombre}','#{desc.id}')"  %>
  </p>
<% end %>

<hr>

<p> Usted eligió: </p>
<input type="text" id="descriptor_general" readonly>

<%= form_for :buscar_descriptor, :url => {:action => "buscar_desc_part"} do |f| %>
  <%= f.text_field :descriptor_general_id, :style => "visibility: hidden" %>
  <p>
    <%= f.submit "Siguiente >>" %>
  </p>
<% end %>

<div class="comandos">
  <p>
    <%  #link_to 'Editar', edit_norma_path(norma) %>
    <%= link_to 'Principal', {:controller => "pagina_principal"}, :target => "main" %>
  </p>
</div>
