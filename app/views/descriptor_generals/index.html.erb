<h1> Listado de Descriptores Generales </h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Comentario</th>
  </tr>

<% for descriptor_general in @descriptor_generals %>
  <tr>
    <td><%=h descriptor_general.nombre %></td>
    <td><%=h descriptor_general.comentario %></td>
    <td><%= link_to 'Mostrar', descriptor_general %></td>
    <td><%= link_to 'Editar', edit_descriptor_general_path(descriptor_general) %></td>
    <td><%= link_to 'Eliminar', descriptor_general, :confirm => '¿Está seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Descriptor General', new_descriptor_general_path %> |
<%= link_to 'Atrás', :back %> |
